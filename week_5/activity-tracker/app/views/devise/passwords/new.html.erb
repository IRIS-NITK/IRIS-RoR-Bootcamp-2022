<p style="color: green"><%= notice %></p>
<h2 class="text-primary">Forgot your password?</h2>

<div class="row">
  <div class="col-6">
    <div class="card mt-4 p-4">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group mb-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-2"%>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "btn mt-2 btn-primary text-dark" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
